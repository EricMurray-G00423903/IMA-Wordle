<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Wordle"
             x:Class="Wordle.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:EmojiGridConverter x:Key="EmojiGridConverter" />
            
            <!-- defined styles for dark light theme buttons -->
            <Style x:Key="LightThemeButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#E0E0E0"/>
                <Setter Property="TextColor" Value="#333333"/>
                <Setter Property="CornerRadius" Value="5"/>
            </Style>

            <Style x:Key="DarkThemeButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#4A90E2"/>
                <Setter Property="TextColor" Value="#FFFFFF"/>
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
